<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyViewApp" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/gray</item>
        <item name="colorOnSecondary">@color/black</item>



        <item name="android:textAppearanceMedium">@style/HeadlineFont</item>
    </style>

    <style name="ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/blue</item>
        <item name="android:titleTextColor">@color/white</item>
    </style>

    <style name="HeadlineFont" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.MyViewApp.NoActionBar" parent="Base.Theme.MyViewApp">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.MyViewApp" parent="Base.Theme.MyViewApp">
        <item name="android:actionBarStyle">@style/ActionBar</item>
    </style>
</resources>